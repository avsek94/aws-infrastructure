{
    "variables":{
        "repository": "la/express",
        "tag": "1.0"
    },
    "builders":[
        {
            "type": "docker",
            "author": "Abhishek Maharjan",
            "image": "node",
            "commit": "true",
            "changes": [
              
                    "EXPOSE 3000"
            ]
        }
    ],
    "description": "docker_image",
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "apt-get update",
                "mkdir /var/code",
                "curl -L https://github.com/linuxacademy/content-nodejs-hello-world/archive/v1.0.tar.gz -o code.tar.gz",
                "tar zxvf code.tar.gz -C /var/code --strip-component=1",
                "cd /var/code"
            ]
        }
    ],
    "post-processors":[
        {
            "type": "docker-tag",
            "repository": "{{user `repository`}}",
            "tag": "{{user `tag`}}"
        }
    ] 
    


}